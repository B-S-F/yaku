{
  "name": "qg-api-service",
  "scripts": {
    "build": "npx turbo run build --continue --cache-dir=.turbo",
    "lint": "npx turbo run lint --cache-dir=.turbo",
    "lint-staged": "npx lint-staged",
    "prepare": "npx husky",
    "format": "npx turbo run format --cache-dir=.turbo",
    "test:cov": "npx turbo run test:cov --cache-dir=.turbo"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@tsconfig/node16-strictest": "1.0.4",
    "cpy-cli": "^5.0.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "madge": "^8.0.0",
    "turbo": "^2.1.3",
    "typescript": "4.9.5"
  },
  "dependencies": {
    "@yaku/api-commons-lib": "workspace:*"
  },
  "lint-staged": {
    "*.{ts,json,yml,yaml,md}": [
      "prettier --write"
    ]
  },
  "pnpm": {
    "onlyBuiltDependencies": ["*"]
  }
}
