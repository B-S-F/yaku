# This configuration file is for pre-commit hooks in a monorepo
# containing Python, Go, Node.js (TypeScript and Vue), Helm, and Docker.

default_stages: [commit, push]  # Define default stages for hooks to run

repos:
  # General hooks for all file types
  - repo: https://github.com/pre-commit/pre-commit-hooks
    rev: v4.5.0  # Specify the version of the hooks
    hooks:
      - id: trailing-whitespace  # Removes trailing whitespace
      - id: end-of-file-fixer  # Ensures files end with a newline
      - id: check-added-large-files  # Prevents committing large files

  # Python-specific hooks
  - repo: https://github.com/psf/black
    rev: 23.1.0
    hooks:
      - id: black  # Formats Python code
        language_version: python3  # Use Python 3 for this hook

  - repo: https://github.com/pycqa/flake8
    rev: 6.0.0
    hooks:
      - id: flake8  # Lints Python code

  # Go-specific hooks
  - repo: https://github.com/golangci/golangci-lint
    rev: v1.50.0
    hooks:
      - id: golangci-lint  # Lints Go code

  # Node.js (TypeScript and Vue) hooks
  - repo: https://github.com/pre-commit/mirrors-eslint
    rev: v8.56.0
    hooks:
      - id: eslint  # Lints JavaScript/TypeScript code
        additional_dependencies: ['eslint-plugin-vue']  # Include Vue plugin

  - repo: https://github.com/pre-commit/mirrors-prettier
    rev: v3.1.0
    hooks:
      - id: prettier  # Formats JavaScript/TypeScript code

  # Helm-specific hooks
  - repo: https://github.com/adrienverge/yamllint
    rev: v1.29.0
    hooks:
      - id: yamllint  # Lints YAML files

  # Docker-specific hooks
  - repo: https://github.com/hadolint/hadolint
    rev: v2.10.0
    hooks:
      - id: hadolint  # Lints Dockerfiles

  # Conventional Commits hook
  - repo: https://github.com/conventional-changelog/commitlint
    rev: v17.6.0
    hooks:
      - id: commitlint  # Ensures commit messages follow Conventional Commits
        stages: [commit-msg]  # Run this hook at the commit message stage
