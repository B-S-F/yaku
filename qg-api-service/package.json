{
  "name": "qg-api-service",
  "engines": {
    "npm": ">=8.0.0",
    "node": ">=18.0.0"
  },
  "workspaces": [
    "qg-api-service",
    "api-commons-lib",
    "api-keycloak-auth-lib",
    "yaku-client-lib",
    "yaku-cli",
    "scale-run-test"
  ],
  "scripts": {
    "build": "npx turbo run build --continue --cache-dir=.turbo",
    "lint": "npx turbo run lint --cache-dir=.turbo",
    "lint-staged": "npx lint-staged",
    "prepare": "if [ -z \"$SKIP_HUSKY\" ]; then cd .. && husky install ./qg-api-service/.husky ; fi",
    "format": "npx turbo run format --cache-dir=.turbo",
    "test:cov": "npx turbo run test:cov --cache-dir=.turbo"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "cpy-cli": "^5.0.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "madge": "^8.0.0",
    "turbo": "^2.1.3"
  },
  "packageManager": "npm@10.9.0",
  "lint-staged": {
    "*.{ts,json,yml,yaml,md}": [
      "prettier --write"
    ]
  }
}
